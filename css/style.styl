.notif-container
  position fixed
  z-index 1
  left 0
  top 0
  width 100%
  height 100%
  overflow hidden
  background-color rgb(0,0,0)
  background-color rgba(0,0,0,0.4)

.notif-container-content
  background-color #fefefe
  margin auto
  padding 20px
  border 1px solid #888
  width 30%

.notif-container-close
  color #aaaaaa
  float right
  font-weight bold
  margin-left 5px


.notif-container-close:hover,
.notif-container-close:focus
  color #000
  text-decoration none
  cursor pointer